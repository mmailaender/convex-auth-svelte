{
	"name": "@mmailaender/convex-auth-svelte",
	"author": "Micha Mailaender",
	"version": "0.1.2",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mmailaender/convex-auth-svelte.git"
	},
	"type": "module",
	"files": [
		"dist/svelte",
		"dist/sveltekit",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/convex",
		"!dist/demo",
		"src/lib/svelte",
		"src/lib/sveltekit",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e && npm run test:unit -- --run",
		"test:unit": "vitest"
	},
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.svelte.d.ts",
			"svelte": "./dist/svelte/index.svelte.js",
			"default": "./dist/svelte/index.svelte.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"svelte": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		},
		"./sveltekit/server": {
			"types": "./dist/sveltekit/server/index.d.ts",
			"import": "./dist/sveltekit/server/index.js"
		}
	},
	"devDependencies": {
		"@convex-dev/auth": "^0.0.90",
		"@playwright/test": "^1.55.0",
		"@skeletonlabs/skeleton": "^3.2.0",
		"@skeletonlabs/skeleton-svelte": "^1.5.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.36.3",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.3.0",
		"concurrently": "^9.2.1",
		"convex": "^1.26.1",
		"convex-svelte": "^0.0.11",
		"dotenv": "^17.2.1",
		"jose": "^6.0.13",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.38.5",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"vite": "^7.1.3",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"@auth/core": "^0.37.0",
		"@convex-dev/auth": "^0.0.87",
		"@sveltejs/kit": "^2.21.0",
		"convex": "^1.24.3",
		"convex-svelte": "^0.0.11",
		"svelte": "^5.38.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"cookie": "^1.0.2",
		"is-network-error": "^1.1.0",
		"jwt-decode": "^4.0.0",
		"path-to-regexp": "^8.2.0"
	}
}
