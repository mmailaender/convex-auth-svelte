{
	"name": "@mmailaender/convex-svelte-auth",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/lib",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"exports": {
		"./server": {
			"types": "./dist/server/index.d.ts",
			"import": "./dist/server/index.js"
		},
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.svelte.js",
			"default": "./dist/svelte/index.svelte.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"svelte": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		},
		"./sveltekit/server": {
			"types": "./dist/sveltekit/server/index.d.ts",
			"import": "./dist/sveltekit/server/index.js"
		}
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.12",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.21.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
