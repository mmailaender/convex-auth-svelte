{
	"name": "@mmailaender/convex-svelte-auth",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"files": [
		"dist/svelte",
		"dist/sveltekit",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/lib/svelte",
		"src/lib/sveltekit",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.svelte.d.ts",
			"svelte": "./dist/svelte/index.svelte.js",
			"default": "./dist/svelte/index.svelte.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"svelte": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		},
		"./sveltekit/server": {
			"types": "./dist/sveltekit/server/index.d.ts",
			"import": "./dist/sveltekit/server/index.js"
		}
	},
	"devDependencies": {
		"@convex-dev/auth": "^0.0.86",
		"@playwright/test": "^1.52.0",
		"@skeletonlabs/skeleton": "^3.1.3",
		"@skeletonlabs/skeleton-svelte": "^1.2.3",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.1.8",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^22.15.29",
		"convex": "^1.24.3",
		"convex-svelte": "^0.0.11",
		"jose": "^6.0.11",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.12",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vitest": "^3.1.4"
	},
	"peerDependencies": {
		"@auth/core": "^0.37.0",
		"@convex-dev/auth": "^0.0.86",
		"@sveltejs/kit": "^2.21.0",
		"convex": "^1.24.3",
		"convex-svelte": "^0.0.11"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"cookie": "^1.0.2",
		"is-network-error": "^1.1.0",
		"jwt-decode": "^4.0.0",
		"path-to-regexp": "^8.2.0"
	}
}
